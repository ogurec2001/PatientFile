@model ПРАКТИКА_MVC_ПРИЛОЖЕНИЕ.Models.Связь_пациента_с_представителем

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать родственную связь пациента и представителя</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Код_родственной_связи)

    <div class="form-group">
        @Html.LabelFor(model => model.Номер_амбулаторной_карты_пациента, "ФИО пациента", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m=>m.Номер_амбулаторной_карты_пациента, Model.PatientList, "Выберите элемент")
            @Html.ValidationMessageFor(model => model.Номер_амбулаторной_карты_пациента, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Код_представителя, "ФИО представителя", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Код_представителя, Model.ParentList, "Выберите элемент")
            @Html.ValidationMessageFor(model => model.Код_представителя, "", new { @class = "text-danger" })
        </div>
    </div>

    @* названия родсветнных связей надо отобразить в виде выпадающего списка, айдишник - "код_родства_свойства" *@
    <div class="form-group">
        @Html.LabelFor(model => model.Код_родственной_связи, "Название родственной связи", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Родственная_связь, Model.CategoryList, "Выберите элемент")
            @Html.ValidationMessageFor(model => model.Код_родственной_связи, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <hr />
            <input type="submit" value="Сохранить изменения" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
